<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dscudr.gym_buddy.gym_buddy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutUs"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".WaterCalculator"
            android:label="Water Calculator" />
        <activity
            android:name=".BmiCalculator"
            android:label="BMI Calculator" />
        <activity
            android:name=".DetailedExercise"
            android:label="Exercise" />

        <receiver
            android:name=".NotificationReminder"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.dscudpr.gymbuddy" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <activity android:name=".PartWiseExercise" />
        <activity android:name=".ProductDetail"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>