<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.dscudr.gym_buddy.gym_buddy.AboutUs"
    android:background="@color/White">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

        >
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar"
                app:titleTextColor="@color/White"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"

                />
        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/textView4"
                    android:layout_margin="10dp"
                    android:src="@drawable/dsc_badge"
                    tools:ignore="NotSibling" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_alignTop="@+id/imageView"
                    android:layout_marginTop="12dp"
                    android:text="Developer"
                    android:textColor="@color/Black"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textView"
                    android:layout_marginEnd="17dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="11dp"
                    android:text="Student Club"
                    android:textColor="@color/Black"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/amiko"
                android:text="@string/abt_dsc"
                android:textColor="@color/Black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3"
                android:layout_margin="15dp"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/amiko"
                android:text="@string/about"
                android:textColor="@color/Black"
                android:textSize="@dimen/para_con" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/cont"
                android:layout_below="@+id/textView4"
                >

                <LinearLayout
                    android:id="@+id/rec1"
                    android:layout_width="308dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/akshay" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/amiko"
                            android:text="Akshay Nandwana"
                            android:textColor="@color/Black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/fb_akshay"
                            android:layout_alignStart="@+id/textView6"
                            android:fontFamily="@font/amiko"
                            android:text="@string/sdcl"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/linked_akshay"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_toEndOf="@+id/imageView2"
                                android:src="@drawable/linkedin"

                                />

                            <ImageView
                                android:id="@+id/fb_akshay"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_toEndOf="@+id/linked_akshay"
                                android:src="@drawable/icons8_facebook_50" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rec1"
                android:id="@+id/rec2"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/textView12"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/mohit" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imageView3"
                        android:fontFamily="@font/amiko"
                        android:text="Mohit Chug"
                        android:textColor="@color/Black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView12"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/amiko"
                        android:text="Application Developer"
                        android:textColor="@color/Black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:id="@+id/linked_mohit"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignStart="@+id/textView11"
                            android:layout_gravity="center"
                            android:src="@drawable/linkedin" />

                        <ImageView
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:id="@+id/fb_mohit"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:src="@drawable/icons8_facebook_50" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cont"
                >
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/amiko"
                    android:text="@string/contact"
                    android:textColor="@color/Black"
                    android:textSize="30sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/facebook"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="28dp"
                    android:layout_toStartOf="@+id/textView9"
                    android:background="@color/White"
                    android:scaleType="fitEnd"
                    android:src="@drawable/icons8_facebook_50" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/call"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/amiko"
                    android:text="@string/phone"
                    android:textColor="@color/Black"
                    android:layout_marginBottom="20dp"
                    android:textSize="@dimen/text_heading_24sp" />

                <ImageButton
                    android:id="@+id/call"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/facebook"
                    android:layout_toStartOf="@+id/textView10"
                    android:background="@color/White"
                    android:contentDescription="@string/call_icon_desc"
                    android:src="@drawable/ic_call_black_24dp"
                    android:layout_marginBottom="20dp"
                    />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
