<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="@dimen/exercise_tile_land"
        android:layout_margin="@dimen/margin_8dp"
        android:id="@+id/exe_card"
        android:padding="@dimen/margin_4dp"
        android:elevation="@dimen/elevation_high"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_4dp"
        android:background="@color/Black">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            >
            <ImageView
                android:layout_width="@dimen/exercise_weight"
                android:layout_height="@dimen/exercise_height"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/margin_8dp"
                android:src="@drawable/pushup"
                android:id="@+id/exe_img"
                android:contentDescription="@string/exercise_description"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text=""
                android:layout_below="@id/exe_img"
                android:id="@+id/exe_name"
                android:padding="@dimen/margin_4dp"
                android:fontFamily="@font/amiko"
                android:textColor="@color/White"
                android:textStyle="bold"
                android:textAlignment="center"
                />

        </RelativeLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>