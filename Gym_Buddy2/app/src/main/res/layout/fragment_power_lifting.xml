<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dscudr.gym_buddy.gym_buddy.PowerLifting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amiko"
                android:text="@string/power_lifting_title"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_heading_24sp" />
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/compition_tile_height"
                android:layout_marginTop="@dimen/margin_8dp"
                android:src="@drawable/powerlifting"
                android:id="@+id/gif"
                android:scaleType="fitXY"
                android:background="@color/White"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:textColor="@color/Black"
                android:fontFamily="@font/amiko"
                android:textSize="@dimen/text_12"
                android:textStyle="bold"
                android:layout_margin="@dimen/margin_16dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/age_class"
                android:textSize="@dimen/text_heading_20sp"
                android:layout_marginStart="@dimen/margin_8dp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:layout_margin="@dimen/margin_16dp"
                android:fontFamily="@font/amiko"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/age"
                android:textColor="@color/Black"
                android:fontFamily="@font/amiko"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/margin_16dp"
                android:textSize="@dimen/text_16"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weight_class"
                android:textSize="@dimen/text_heading_20sp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_margin="@dimen/margin_16dp"
                android:fontFamily="@font/amiko"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/Black"
                android:textAlignment="center"
                android:textSize="@dimen/text_16"
                android:layout_margin="@dimen/margin_16dp"
                android:fontFamily="@font/amiko"
                android:layout_weight="1"
                android:text="@string/men_weight_class"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_16"
                android:layout_margin="@dimen/margin_16dp"
                android:fontFamily="@font/amiko"
                android:layout_weight="1"
                android:text="@string/women_weight_class"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/man_weight"
                android:textColor="@color/Black"
                android:textAlignment="center"
                android:textSize="@dimen/text_14"
                android:layout_margin="@dimen/margin_16dp"
                android:fontFamily="@font/amiko"
                android:layout_weight="1"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/woman_weight"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_14"
                android:layout_margin="@dimen/margin_16dp"
                android:fontFamily="@font/amiko"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
