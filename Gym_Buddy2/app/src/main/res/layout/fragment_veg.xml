<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dscudr.gym_buddy.gym_buddy.diet_types_fragment.VegFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="@font/amiko"
        android:text="Morning 7 AM"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/luke"
            android:scaleType="fitXY"
            />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="2 Glass Luke warm Water"
        android:textSize="16dp"
            android:fontFamily="@font/amiko"
        android:textColor="@color/White"
        android:textStyle="bold"
            android:background="@color/Black"
            android:padding="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:text="Morning 7:30 AM"
        android:textSize="20dp"
        android:fontFamily="@font/amiko"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/dryfruits"
            android:scaleType="fitXY"
            />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
            android:fontFamily="@font/amiko"
        android:text="Soaked 5 Almonds , 1 walnut , 1 Anjeer , other dryfruit"
        android:textSize="16dp"
        android:textColor="@color/White"
            android:background="@color/Black"
        android:textStyle="bold"
            android:padding="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:text="Breakfast"
        android:fontFamily="@font/amiko"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/breakfats"
            android:scaleType="fitXY"
            />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
            android:fontFamily="@font/amiko"
        android:text="Banana, Milkshake / Sprouds / Poha / Upma / sandwich "
        android:textSize="16dp"
        android:textColor="@color/White"
        android:background="@color/Black"
        android:textStyle="bold"
            android:padding="5dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Lunch"
        android:fontFamily="@font/amiko"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/lunch_veg"
            android:scaleType="fitXY"
            />
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
            android:fontFamily="@font/amiko"
        android:text="Salad + 2 Chapati + 60 ml curd + 1 veg. + 1 bowl Daal"
        android:textSize="16dp"
        android:textColor="@color/White"
            android:background="@color/Black"
        android:textStyle="bold"
            android:padding="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Dinner"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:fontFamily="@font/amiko"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/dinner_veg"
            android:scaleType="fitXY"
            />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
            android:fontFamily="@font/amiko"
        android:text="Soup + 2 Rotis + 2 Bowl veg.+ salad + Daal"
        android:padding="5dp"
        android:textSize="16dp"
        android:textColor="@color/White"
        android:background="@color/Black"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Before Bed"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:fontFamily="@font/amiko"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/milk"
            android:scaleType="fitXY"
            />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
            android:fontFamily="@font/amiko"
            android:padding="5dp"
        android:text="1 Glass Milk  + Apple"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/White"
            android:background="@color/Black"
            android:layout_marginBottom="20dp"
        />
    </LinearLayout>



</ScrollView>
