<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dscudr.gym_buddy.gym_buddy.Settings"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification_title"
        android:textSize="@dimen/text_heading_24sp"
        android:fontFamily="@font/amiko"
        android:textColor="@color/red"
        android:layout_margin="@dimen/margin_8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin_8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Water_Reminder_Notificatios"
            android:textSize="@dimen/text_heading_20sp"
            android:fontFamily="@font/amiko"
            android:textColor="@color/Black"
            android:layout_weight="1"
            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/sw_setting"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification_explanation"
        android:textSize="@dimen/text_14"
        android:fontFamily="@font/amiko"
        android:layout_margin="@dimen/margin_4dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/test_notification_text"
        android:layout_margin="@dimen/margin_16dp"
        android:textSize="@dimen/text_heading_20sp"
        android:id="@+id/click"
        android:fontFamily="@font/amiko"
        android:textColor="@color/colorPrimary"/>

</LinearLayout>
